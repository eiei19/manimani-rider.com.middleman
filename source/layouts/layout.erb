<!doctype html>
<html lang="ja">

<head>
    <meta charset='utf-8' />
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1" />
    <meta name="description" content="Akihiro Nagashima's Weblog" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="images/favicon.ico">
    <%= stylesheet_link_tag "bootstrap.min", "bootstrap-theme.min", "manimani-rider"  %>
    <title><%= current_page.data.title ?  current_page.data.title.to_s() + ' | まにまにらいだー' : 'まにまにらいだー' %></title>
</head>

<body>

    <div id="Header"  class="container">
        <a href="/">
            <%= tag :img, :src => "/images/title.png", :class => "img-responsive" %>
        </a>
    </div>

    <div id="Contents"  class="container">
        <%= yield %>
        <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'manimani-rider'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>

    <div id="Footer"  class="container">
        <div class="row">
            <div class="col-xs-6 col-sm-4 col-md-4">
                <h2 class="category">かいてるひと</h2>
            </div>
            <div class="col-xs-6 col-sm-4 col-md-4">
                <h2 class="category">あたらしいやつ</h2>
                <ul>
                    <% blog.articles[0...5].each do |article| %>
                    <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
                    <% end %>
                </ul>
                <h2 class="category">ぶんべつしたやつ</h2>
                <ul>
                    <% blog.tags.each do |tag, articles| %>
                    <li><%= link_to tag, tag_path(tag) %> (<%= articles.size %>)</a></li>
                    <% end %>
                </ul>
            </div>
            <div class="col-xs-6 col-sm-4 col-md-4">
                <h2 class="category">つきごと</h2>
                <ul>
                    <% blog.articles.group_by {|article| article.date.year.to_s()+'/'+article.date.month.to_s() }.each do |year_month, articles| %>
                    <% year = year_month.split("/")[0] %>
                    <% month = year_month.split("/")[1] %>
                    <li><%= link_to year+"年"+month+"月", blog_month_path(year, month) %> (<%= articles.size %>)</a></li>
                    <% end %>
                </ul>
            </div>
        </div>
        <div id="SiteGenerator"><a href="#">Powered by Middleman</a></div>
    </div>
</body>

</html>
