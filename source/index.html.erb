---
pageable: true
per_page: 1
---

<% page_articles.each_with_index do |article, i| %>
    <%= partial(:article_header, :locals => {:article => article}) %>
    <%= article.body %>
    <%= partial(:social, :locals => {:url => 'http://manimani-rider.com' + article.url, :title => article.title + ' | まにまいらいだー'}) %>
<% end %>

<% if paginate %>
<div id="Paginator" class="clearfix">
    <% if next_page %>
        <div class="prev">
        <%= link_to '← ふるい', next_page %>
        </div>
    <% end %>
    <% if prev_page %>
        <div class="next">
        <%= link_to 'あたらしい →', prev_page %>
        </div>
    <% end %>
</div>
<% end %>