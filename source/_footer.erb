    <div id="Footer"  class="container">
        <div class="row">
            <div class="col-xs-5 col-sm-3 col-md-3 author">
                <h2 class="category">かいてるひと</h2>
                <img src="/images/profile.jpg" class="img-responsive profile" />
                <p> </p>
                <a href="https://www.facebook.com/nagashima.akihiro" target="_blank"><img src="/images/facebook.png" class="sns" /></a>
                <a href="https://twitter.com/eiei19" target="_blank"><img src="/images/twitter.png" class="sns" /></a>
            </div>
            <div class="col-xs-8 col-sm-6 col-md-6">
                <h2 class="category">あたらしいやつ</h2>
                <ul>
                    <% blog.articles[0...5].each do |article| %>
                    <li><%= link_to article.title, article %> <span><%= article.date.strftime(' (%m月%d日)') %></span></li>
                    <% end %>
                </ul>
                <h2 class="category">ぶんべつしたやつ</h2>
                <ul>
                    <% blog.tags.each do |tag, articles| %>
                    <li><%= link_to tag, tag_path(tag) %> (<%= articles.size %>)</a></li>
                    <% end %>
                </ul>
            </div>
            <div class="col-xs-5 col-sm-3 col-md-3">
                <h2 class="category">つきごと</h2>
                <ul>
                    <% blog.articles.group_by {|article| article.date.year.to_s()+'/'+article.date.month.to_s() }.each do |year_month, articles| %>
                    <% year = year_month.split("/")[0] %>
                    <% month = year_month.split("/")[1] %>
                    <li><%= link_to year+"年"+month+"月", blog_month_path(year, month) %> (<%= articles.size %>)</a></li>
                    <% end %>
                </ul>
            </div>
        </div>
